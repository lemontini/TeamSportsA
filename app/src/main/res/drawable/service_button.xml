<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval" >
            <stroke android:width="1dip" android:color="#FF9800" />
            <gradient android:type="radial" android:gradientRadius="35dp" android:startColor="#3C3F41" android:centerColor="#3C3F41" android:endColor="#000000" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#5e7974" />
            <solid android:color="#58857e" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval" >
            <stroke android:width="1dip" android:color="#FF9800" />
            <gradient android:type="radial" android:gradientRadius="35dp" android:startColor="#3C3F41" android:centerColor="#3C3F41" android:endColor="#2B2B2C" />
        </shape>
    </item>
</selector>